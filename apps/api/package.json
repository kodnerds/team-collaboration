{
  "name": "@tc/api",
  "version": "0.0.1",
  "description": "Team collaboration API",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "9.0.3",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "0.3.27",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@tc/eslint-config": "*",
    "@tc/typescript-config": "*",
    "@testcontainers/postgresql": "^11.8.1",
    "cross-env": "^7.0.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "envalid": "^8.1.1",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/src/index.js",
    "dev:local": "nodemon src/index.ts",
    "dev": "docker compose up",
    "lint": "eslint . --max-warnings=0 && tsc --noEmit && tsc --noEmit -p test/tsconfig.json",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"{src,test}/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"{src,test}/**/*.{ts,js,json,md}\"",
    "docker:run-build": "docker compose up --build",
    "docker:build": "docker compose build",
    "docker:stop": "docker compose down",
    "test": "jest",
    "typeorm": "npm run build && cross-env POSTGRES_HOST=localhost npx typeorm -d dist/src/database/data-source.js",
    "migration:generate": "npm run typeorm migration:generate src/migrations/new-migration",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert"
  }
}
